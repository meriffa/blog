@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}
<div>
    <h5 class="text-danger">An error occurred while processing this request.</h5>
    @if (Model.ShowRequestId)
    {
        <div>
            <strong>Request ID:</strong>&nbsp;<code>@Model.RequestId</code>
        </div>
    }
    <div>
        <strong>Exception:</strong>&nbsp;<code>@Model.ExceptionMessage</code>
    </div>
    <div>
        <strong>Path:</strong>&nbsp;<code>@Model.ExceptionPath</code>
    </div>
    <div>
        Switch to <strong>Development</strong> environment to get detailed information about the error that occurred.
    </div>
</div>